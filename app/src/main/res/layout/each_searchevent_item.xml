<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    android:layout_gravity="center_vertical">

    <github.ankushsachdeva.emojicon.EmojiconTextView
        android:id="@+id/eachSearchEvent_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/round_shape_shadow"
        android:gravity="center"
        android:textSize="25dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/eachSearchEvent_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Go"
        android:textSize="@dimen/button_text_normal"
        android:textColor="@color/appColor"
        android:background="@drawable/round_corner_red_edge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:elevation="3dp"/>

    <TextView
        android:id="@+id/eachSearchEvent_name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:text="Awesome Party"
        android:textSize="@dimen/text_normal"
        android:textColor="#000"
        android:lines="1"
        android:ellipsize="middle"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@id/eachSearchEvent_go"
        android:layout_toEndOf="@id/eachSearchEvent_image"/>

</RelativeLayout>