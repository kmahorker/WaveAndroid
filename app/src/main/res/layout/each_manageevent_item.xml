<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/eachManage_partyEmoji_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:src="@drawable/plug_icon"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@id/eachManage_partyEmoji_icon"
        android:layout_toEndOf="@id/eachManage_partyEmoji_icon">

        <TextView
            android:id="@+id/eachManage_partyname_item"
            android:text="Party Nameeeeeeeeeeeeeeee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="#77abff"
            android:lines="1"
            android:ellipsize="end" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/eachManage_partyInfo_item"
            android:text="12 days 58 going"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="2dp"
            android:layout_below="@id/eachManage_partyname_item"
            android:textSize="15sp"
            android:textColor="#979797" />

    </RelativeLayout>

</RelativeLayout>