<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/actionbar_createEvent_invite_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forward_arrow"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_alignParentLeft="true"
        android:scaleX="-1"
        android:scaleY="-1"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/actionbar_createEvent_invite_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/black_solid"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/actionbar_createEvent_invite_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="15dp"
        app:srcCompat="@drawable/forward_arrow" />

</RelativeLayout>