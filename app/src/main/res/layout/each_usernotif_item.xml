<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <TextView
        android:id="@+id/eachNotif_message"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:maxWidth="210dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="@color/black_solid"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/eachNotif_sender"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:maxWidth="70dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="@color/black_solid"
        android:lines="1"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_toEndOf="@id/eachNotif_message"/>

    <TextView
        android:id="@+id/eachNotif_timeAgo"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="@color/grey_default"
        android:layout_toEndOf="@id/eachNotif_sender"/>

    <TextView
        android:id="@+id/eachNotif_decline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Decline"
        android:background="@drawable/round_corner_red_edge"
        android:gravity="center"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/eachNotif_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:layout_toStartOf="@id/eachNotif_decline"
        android:gravity="center"
        android:padding="5dp"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:background="@drawable/round_corner_red_edge"/>

</RelativeLayout>