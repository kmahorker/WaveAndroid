<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/eachNotif_senderPhoto"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/round_shape"/>

    <TextView
        android:id="@+id/eachNotif_sender"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:maxWidth="70dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="#000"
        android:lines="1"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@id/eachNotif_senderPhoto"/>

    <TextView
        android:id="@+id/eachNotif_message"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:maxWidth="210dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="#000"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@id/eachNotif_sender"/>

    <TextView
        android:id="@+id/eachNotif_timeAgo"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/eachNotif_message"/>

</RelativeLayout>