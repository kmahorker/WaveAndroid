<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_best_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.thewavesocial.waveandroid.LoginFolder.AddBestFriendActivity">


    <TextView
        android:id="@+id/edit_titleLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Message a friend in case of an emergency"
        android:textAlignment="center"
        android:textSize="24dp"
        android:textColor="@color/black_solid"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/edit_infoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add a friend from your contacts to send them a text in case of an emergency by tapping on the SOS button in the map screen."
        android:textAlignment="center"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/edit_phoneNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="70dp"
        android:cursorVisible="false"

        android:drawableRight="@drawable/plus_button_small"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="Phone Number: 18053212972"
        android:inputType = "phone"
        android:text=""
        android:textColor="@color/black_solid"
        android:textSize="18dp" />


</LinearLayout>
