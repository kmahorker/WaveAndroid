<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/actionbar_hoststats_edit_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/appColor"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/actionbar_hoststats_edit_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/appColor"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/actionbar_hoststats_edit_editEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Edit Event"
        android:textColor="@color/black_solid"
        android:textSize="@dimen/text_normal"
        android:layout_toEndOf="@id/actionbar_hoststats_backbutton"
        android:layout_toStartOf="@id/actionbar_hoststats_editparty"
        android:lines="2"
        android:ellipsize="end" />

</RelativeLayout>