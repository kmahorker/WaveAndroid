<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <github.ankushsachdeva.emojicon.EmojiconTextView
        android:id="@+id/eachUser_partyEmoji_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="7.5dp"
        android:layout_marginBottom="7.5dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="25dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:layout_alignTop="@id/eachUser_partyEmoji_icon"
        android:layout_toEndOf="@id/eachUser_partyEmoji_icon">

        <TextView
            android:id="@+id/eachUser_partyname_item"
            android:text="Party Nameeeeeeeeeeeeeeee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/eachUser_partyInfo_item"
            android:text="12 days 58 going"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:layout_marginStart="2dp"
            android:layout_below="@id/eachUser_partyname_item"
            android:textSize="15sp"
            android:textColor="#979797" />

    </RelativeLayout>

</RelativeLayout>