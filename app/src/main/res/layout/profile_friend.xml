<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/friend_profile_layout"
                android:background="@color/backgroundColor">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/friend_profile_pic"
        android:background="@drawable/round_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/> <!-- profile picture-->

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/friend_followers_count"
        android:text="250\nfollowers"
        android:gravity="center"
        android:background="@drawable/round_shape"
        android:layout_marginStart="50dp"
        android:layout_marginTop="110dp"
        android:elevation="2dp"/> <!--Followers Count-->

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/friend_following_count"
        android:text="250\nfollowing"
        android:gravity="center"
        android:background="@drawable/round_shape"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="110dp"
        android:elevation="2dp"/> <!--Following Count-->

    <TextView
        android:id="@+id/friend_follow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow"
        android:textColor="@color/appColor"
        android:background="@drawable/round_corner"
        android:layout_below="@id/friend_followers_count"
        android:layout_centerHorizontal="true"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:elevation="4dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/friend_notification_list"
        android:layout_centerHorizontal="true"
        android:background="#FFF"
        android:scrollbarStyle="insideInset"
        android:scrollbarFadeDuration="0"
        android:layout_marginTop="20dp"
        android:layout_below="@id/friend_follow_button"/> <!--notifications(list)-->

</RelativeLayout>