<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/eachCreateEvent_invite_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/eachCreateEvent_invite_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/white_solid"
        android:padding="15dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/eachCreateEvent_invite_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="70dp"
        android:textSize="@dimen/text_normal"
        android:textColor="#000"
        android:lines="1"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/eachCreateEvent_invite_profile"
        android:layout_toStartOf="@id/eachCreateEvent_invite_button"/>

</RelativeLayout>