<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_stats_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="25dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventStats_earning"
        android:text="Amount earned:     $20"
        android:textSize="20sp"
        android:textColor="#000"/> <!--Amount Earned (Text)-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventStats_checkedIn"
        android:text="# of people checked in: 6"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@id/eventStats_earning"
        android:layout_marginTop="30dp"/> <!--Checked In # (Text)-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventStats_myHosts"
        android:text="My Host(s)"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@id/eventStats_checkedIn"
        android:layout_marginTop="30dp"/> <!--My Hosts (Text)-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventStats_myBouncers"
        android:text="My Bouncer(s)"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@id/eventStats_myHosts"
        android:layout_marginTop="30dp"/> <!--My Bouncers (Text)-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventStats_people"
        android:text="People"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_below="@id/eventStats_myBouncers"
        android:layout_marginTop="30dp"/> <!--People (Text)-->

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/eventStats_bouncerlist"
        android:layout_below="@+id/eventStats_hostlist"
        android:layout_toEndOf="@+id/eventStats_myBouncers"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"/> <!--Bouncer list (Grid)-->

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/eventStats_hostlist"
        android:layout_below="@+id/eventStats_checkedIn"
        android:layout_toEndOf="@+id/eventStats_myHosts"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@id/eventStats_bouncerlist"
        android:layout_height="40dp"/> <!--Host list (Grid)-->
    
    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="6"
        android:layout_below="@id/eventStats_people"
        android:layout_margin="5dp"
        android:id="@+id/eventStats_peoplelist"/> <!--People list (Grid)-->

</RelativeLayout>
