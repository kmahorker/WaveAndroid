<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thewavesocial.waveandroid">

    <uses-permission android:name="android.permission.ACCESS_GPS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/plug_icon"
        android:label="PLUG"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".LoginFolder.LoginActivity" />
        <activity android:name=".LoginFolder.SignupActivity" />
        <activity android:name=".SocialFolder.FriendProfileActivity" />
        <activity android:name=".SocialFolder.InviteFriendsActivity" />
        <activity android:name=".SocialFolder.EditUserProfileActivity" />
        <activity android:name=".HostFolder.CreateEventActivity" />
        <activity android:name=".HostFolder.ManageEventsActivity" />
        <activity android:name=".HostFolder.EventStatsActivity" />
        <activity android:name=".LoginFolder.ForgotPasswordActivity" />
        <activity android:name=".LoginFolder.StartupActivity" />
        <activity android:name=".SocialFolder.FollowActivity" />
        <activity
            android:name=".HomeSwipeActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".LoginFolder.LoginTutorialActivity"></activity>
        <activity android:name=".LoginFolder.AddBestFriendActivity">

        </activity>
        <activity android:name=".HostFolder.CreateAnEventActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>